{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Batch Report v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "kind", "status", "goal", "inputs", "results", "summary", "next_actions"],
  "properties": {
    "schema_version": { "type": "integer", "const": 1 },
    "kind": { "type": "string", "const": "batch_v1" },
    "status": { "type": "string", "enum": ["success", "partial", "failure"] },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },

    "goal": { "type": "string", "minLength": 1 },

    "inputs": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },

    "results": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["input", "status", "outputs"],
        "properties": {
          "input": { "type": "string", "minLength": 1 },
          "status": { "type": "string", "enum": ["success", "failure"] },
          "outputs": {
            "type": "array",
            "items": { "$ref": "#/$defs/artifact" }
          },
          "notes": { "type": "string" }
        }
      }
    },

    "summary": { "type": "string", "minLength": 1 },

    "issues": {
      "type": "array",
      "items": { "$ref": "#/$defs/issue" }
    },

    "next_actions": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },

    "extensions": { "type": "object", "additionalProperties": true }
  },

  "$defs": {
    "artifact": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label"],
      "properties": {
        "label": { "type": "string", "minLength": 1 },
        "path": { "type": ["string", "null"] },
        "description": { "type": "string" }
      }
    },
    "issue": {
      "type": "object",
      "additionalProperties": false,
      "required": ["severity", "title", "details"],
      "properties": {
        "severity": { "type": "string", "enum": ["info", "warn", "error"] },
        "title": { "type": "string", "minLength": 1 },
        "details": { "type": "string", "minLength": 1 },
        "evidence": { "type": "string" },
        "suggested_fix": { "type": "string" }
      }
    }
  }
}
