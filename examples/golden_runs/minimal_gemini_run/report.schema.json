{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/agentic-usertest/report.schema.json",
  "title": "Agentic Usertest Report",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "persona",
    "mission",
    "minimal_mental_model",
    "confidence_signals",
    "confusion_points",
    "adoption_decision",
    "suggested_changes"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "persona": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        }
      }
    },
    "mission": {
      "type": "string",
      "minLength": 1
    },
    "action_log": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "minimal_mental_model": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "summary",
        "entry_points"
      ],
      "properties": {
        "summary": {
          "type": "string",
          "minLength": 1
        },
        "entry_points": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "confidence_signals": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "found",
        "missing"
      ],
      "properties": {
        "found": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "missing": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "confusion_points": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "summary"
        ],
        "properties": {
          "summary": {
            "type": "string",
            "minLength": 1
          },
          "impact": {
            "type": "string"
          },
          "evidence": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "kind",
                "value"
              ],
              "properties": {
                "kind": {
                  "type": "string",
                  "enum": [
                    "file",
                    "command",
                    "url",
                    "note"
                  ]
                },
                "value": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    },
    "adoption_decision": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "recommendation",
        "rationale"
      ],
      "properties": {
        "recommendation": {
          "type": "string",
          "enum": [
            "adopt",
            "investigate",
            "avoid"
          ]
        },
        "rationale": {
          "type": "string",
          "minLength": 1
        },
        "qualifiers": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "suggested_changes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type",
          "change"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "doc",
              "code",
              "config",
              "test"
            ]
          },
          "location": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": [
              "p0",
              "p1",
              "p2"
            ]
          },
          "change": {
            "type": "string",
            "minLength": 1
          },
          "expected_impact": {
            "type": "string"
          }
        }
      }
    }
  }
}
